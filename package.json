    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.23",
    "eslint": "^8.57.0",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.17",
